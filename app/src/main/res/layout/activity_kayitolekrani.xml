<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.acer.mobilustam.kayitolekrani"
    android:background="@mipmap/kayitolekrani_background"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="89dp"
        android:layout_height="83dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="70dp"
        app:srcCompat="@drawable/loginekrani_logo" />

    <TextView
        android:id="@+id/kolustur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="#FFF"
        android:textSize="31sp"
        android:layout_marginTop="25dp"
        android:text="Kayıt Oluştur"/>

    <EditText
        android:id="@+id/adgiris"
        android:layout_width="287dp"
        android:layout_height="42dp"
        android:layout_below="@+id/kolustur"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="15dp"
        android:background="@mipmap/kayitolekrani_adedittext"
        android:ems="10"
        android:focusableInTouchMode="true"
        android:hint="Ad"
        android:imeOptions="actionNext"
        android:inputType="textPersonName"
        android:nextFocusDown="@+id/soyadgiris"
        android:paddingLeft="50dp" />
    <EditText
        android:id="@+id/soyadgiris"
        android:layout_width="287dp"
        android:layout_height="42dp"
        android:layout_below="@+id/adgiris"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:background="@mipmap/kayitolekrani_adedittext"
        android:ems="10"
        android:hint="Soyad"
        android:inputType="textPersonName"
        android:nextFocusDown="@+id/emailgiris"
        android:imeOptions="actionNext"
        android:paddingLeft="50dp"
        android:focusableInTouchMode="true" />
    <EditText
    android:id="@+id/emailgiris"
    android:layout_width="287dp"
    android:layout_height="42dp"
    android:layout_below="@+id/soyadgiris"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:layout_marginTop="10dp"
        android:hint="E-Mail Adresi"
    android:background="@mipmap/kayitolekrani_mailedittext"
    android:ems="10"
    android:inputType="textEmailAddress"
    android:nextFocusDown="@+id/telnogiris"
    android:imeOptions="actionNext"
    android:paddingLeft="50dp"
    android:focusableInTouchMode="true" />
    <EditText
        android:id="@+id/telnogiris"
        android:layout_width="287dp"
        android:layout_height="42dp"
        android:layout_below="@+id/emailgiris"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:hint="5xx xxx xxxx"
        android:background="@mipmap/kayitolekrani_teledittext"
        android:ems="10"
        android:inputType="number"
        android:maxLines="10"
        android:nextFocusDown="@+id/sifregiris"
        android:imeOptions="actionNext"
        android:paddingLeft="50dp"
        android:focusableInTouchMode="true" />
    <EditText
        android:id="@+id/sifregiris"
        android:layout_width="287dp"
        android:layout_height="42dp"
        android:layout_below="@+id/telnogiris"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:hint="******"
        android:background="@mipmap/kayitolekrani_passedittext"
        android:ems="10"
        android:inputType="textPassword"
        android:nextFocusDown="@+id/button2"
        android:imeOptions="actionNext"
        android:paddingLeft="50dp"
        android:focusableInTouchMode="true" />

    <Button
        android:id="@+id/buttonregister"
        android:layout_width="144dp"
        android:layout_height="51dp"
        android:layout_below="@id/sifregiris"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/kayitolbutton"
        android:layout_marginTop="18dp" />


            <ProgressBar
                android:visibility="gone"
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>

