<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.acer.mobilustam.SmsOnayEkrani"
    android:background="@mipmap/kayitolekrani_background"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

    <ImageView
        android:id="@+id/tellogo"
        android:layout_width="92dp"
        android:layout_height="99dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="119dp"
        app:srcCompat="@mipmap/smsonayekrani_imageview" />

    <TextView
        android:id="@+id/smsaktivasyonu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tellogo"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:textSize="31sp"
        android:text="SMS Aktivasyonu"
        android:textColor="#FFF"/>

    <TextView
        android:id="@+id/aciklama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/smsaktivasyonu"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="17dp"
        android:textSize="13sp"
        android:gravity="center"
        android:text="Telefonunuza SMS olarak gelen aktivasyon kodunuzu giriniz. 1 dakika içerisinze halen aktivasyon kodunuzu alamadıysanız tekrar mesaj gönder butonuna tıklayınız."
        android:textColor="#FFF" />

    <EditText
        android:id="@+id/aktivasyonet"
        android:layout_width="287dp"
        android:layout_height="44dp"
        android:layout_below="@+id/aciklama"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:background="@mipmap/smsonayekrani_edittext"
        android:inputType="number"
        android:hint="Aktivasyon Numaranızı Giriniz"
        android:gravity="center"
        />

    <Button
        android:id="@+id/aktivasyonbutton"
        android:layout_width="287dp"
        android:layout_height="50dp"
        android:background="@mipmap/smsonayekrani_button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/aktivasyonet"
        android:layout_marginTop="15dp"
        />

    <Button
        android:id="@+id/tekrarsmsbutton"
        android:layout_width="287dp"
        android:layout_height="50dp"
        android:background="@mipmap/smsonayekrani_button2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/aktivasyonbutton"
        android:layout_marginTop="15dp"
         />

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>

